<% layout('layouts/boilerplate') %>

    <h1 class="mb-5">LIST OF CAMPGROUNDS</h1>

    <%for(let campground of campgrounds){%>
        <!-- <li><a href="/campgrounds/<%=campground._id %>">
                <%= campground.title %>
            </a></li> -->

        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <% if(campground.images.length) {%>
                    <img src="<%=campground.images[0].url%>" class="img-fluid rounded-start" alt="...">
                    <% }else{ %>
                    <img src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png" class="img-fluid rounded-start" alt="...">
                      <% } %>  
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text"><small class="text-body-secondary">
                                <%= campground.location %>
                            </small></p>
                        <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>" role="button">View <%=
                                campground.title %> </a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>